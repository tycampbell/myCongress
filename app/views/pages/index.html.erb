<h2>All Pages</h2> 
<p><%= link_to 'Create new page', new_page_url %></p>
<ul>
	<% @pages.each do |page| %> 
		<li> 
			<%= link_to page.permalink, page_path(page.permalink) %> : 
			<%= page.title %> : 
			<%= link_to("Edit", edit_page_path(page.permalink) )%> : 
			<%= link_to("Delete", page_url(page.permalink), :method => 'delete', :confirm => "Are you sure you wish to delete '#{page.title}'?")%>
		</li>
	<% end %> 
</ul>